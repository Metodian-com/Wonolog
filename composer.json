{
    "name": "inpsyde/wonolog",
    "description": "Monolog-based logging package for WordPress.",
    "keywords": [
        "debug",
        "debugging",
        "log",
        "logger",
        "logging",
        "monolog",
        "psr-3",
        "wordpress"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Inpsyde GmbH",
            "email": "hello@inpsyde.com",
            "homepage": "https://inpsyde.com",
            "role": "Company"
        }
    ],
    "support": {
        "issues": "https://github.com/inpsyde/Wonolog/issues",
        "source": "https://github.com/inpsyde/Wonolog",
        "docs": "https://inpsyde.github.io/Wonolog/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "monolog/monolog": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "brain/monkey": "^2.2.0",
        "mikey179/vfsstream": "~1.6.4",
        "inpsyde/php-coding-standards": "dev-master",
        "vimeo/psalm": "dev-master",
        "roots/wordpress": "@stable",
        "symfony/process": "^4.4",
        "globalis/wp-cli-bin": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Inpsyde\\Wonolog\\": "src/"
        },
        "files": [
            "inc/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Inpsyde\\Wonolog\\Tests\\": "tests/src/",
            "Inpsyde\\Wonolog\\Tests\\Unit\\": "tests/unit/",
            "Inpsyde\\Wonolog\\Tests\\Integration\\": "tests/integration/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-2.x": "2.0.x-dev"
        },
        "wordpress-install-dir": "vendor/wordpress/wordpress"
    },
    "scripts": {
        "cs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
        "psalm": "@php ./vendor/vimeo/psalm/psalm",
        "tests:unit": "@php ./vendor/phpunit/phpunit/phpunit --testsuite=unit",
        "tests:unit:no-cov": "@php ./vendor/phpunit/phpunit/phpunit --testsuite=unit --no-coverage",
        "tests:integration": "@php ./vendor/phpunit/phpunit/phpunit --testsuite=integration --no-coverage"
    }
}
